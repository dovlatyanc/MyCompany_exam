@model IEnumerable<ServiceDTO>
@{

    string strTitle = "Наши услуги";
    ViewBag.Title = strTitle;
}
@await Html.PartialAsync("_SidebarPartial")
<style>
    .image-service-list {
        display: block;
        float: left;
        margin: 0 20px 15px 0;
        width: 120px;
        height: 120px;
        overflow: hidden;
    }

        .image-service-list img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Обрезает изображение, чтобы заполнить контейнер */
            border-radius: 8px;
        }

    .box.excerpt {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
        align-items: flex-start;
    }

        .box.excerpt > div {
            flex: 1;
        }

    /* Адаптивность: на маленьких экранах изображение сверху */
    @@media (max-width: 768px) {
        .box.excerpt {
            flex-direction: column;
        }

        .image-service-list {
            float: none;
            margin: 0 0 10px 0;
            width: 100%;
            height: 180px;
        }
    }
</style>
<div class="col-8 col-12-medium imp-medium">
    <div id="content">
        @if (Model.Any())
        {
            <section class="box article-list">
                <h2 class="icon fa-file-alt">
                    @strTitle
                </h2>
                @foreach (ServiceDTO entity in Model)
                {
                    <article class="box excerpt">
                        <a asp-area="" asp-controller="Services" asp-action="Show" asp-route-id="@entity.Id" class="image-left image-service-list">
                            <img src="~/img/@entity.PhotoFileName" alt=" " />
                        </a>
                        <div>
                            <header>
                                <h3>
                                    <a asp-area="" asp-controller="Services" asp-action="Show" asp-route-id="@entity.Id">
                                        @entity.Title
                                    </a>
                                </h3>
                            </header>
                            @if (entity.CategoryName != null)
                            {
                                <div>
                                    Категория: <span class="text-bold">@entity.CategoryName</span>
                                </div>
                            }
                            <p>
                                @entity.DescriptionShort
                            </p>
                        </div>
                    </article>
                }
            </section>
        }
    </div>

</div>